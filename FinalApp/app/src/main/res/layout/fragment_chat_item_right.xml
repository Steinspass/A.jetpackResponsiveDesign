<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_editor_absoluteY="25dp"
        app:layout_editor_absoluteX="0dp">

    <ImageView
            android:id="@+id/imageViewProfileRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textViewMessageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:background="@drawable/bubble_chat_right"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxWidth="300dp"
            android:paddingBottom="8dp"
            android:paddingEnd="18dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewProfileRight"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textViewTimeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMessageRight"
            app:layout_constraintEnd_toStartOf="@+id/textViewMessageRight" />

</android.support.constraint.ConstraintLayout>